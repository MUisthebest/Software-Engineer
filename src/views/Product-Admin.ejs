<section class="Users">
    <div class="top">
        <i class="fas fa-bars slidebar-toggle"></i>
    </div>
    <div class="Activity">
        <div class="title">
            <i class='bx bxs-user'></i>
            <span class="text">Manage Product</span>
        </div>
        <div class="content">
            <div class="Btns">
                <button id="addProductBtn">Add Product</button>
                <button id="removeProductBtn">Remove Product</button>
            </div>
        </div>
        <div class="ProductData">
            <div class="box_title">
                <span class="data-title">ID</span>
                <span class="data-title">Product Name</span>
                <span class="data-title">Price</span>
                <span class="data-title">Image</span>      
            </div>
            <div class="box_data">
                <% for (let i = 0; i < products.length; i++){ %>
                    <div class="item">
                        <div class="data ID">
                            <span class="data-list"><%=products[i].id%></span>
                        </div>
                        <div class="data name">
                            <span class="data-list"><%=products[i].name%></span>
                        </div>
                        <div class="data phone">
                            <span class="data-list"><%=products[i].price%></span>
                        </div>   
                        <div class="data address">
                            <span class="data-list"><img src="data:image/<%=products[i].image.contentType%>;base64,<%=products[i].image.data.toString('base64')%>" alt=""></span>
                        </div>  
                    </div> 
                <% } %> 
            </div>     
        </div>
    </div>             
</div>
<div class="overlay" id="overlay"></div>
<div class="form-panel" id="formPanel">
    <form id="product-form" enctype="multipart/form-data">
        <div>
            <label for="name">Product Name</label>
            <input type="text" id="name" name="name" placeholder="Name" value="" required />
        </div>
        <div>
            <label for="price">Price</label>
            <input type="number" id="price" name="price" placeholder="Price" min="1" value="" required />
        </div>
        <div>
            <label for="quantity">Stock Quatity</label>
            <input type="number" id="quantity" name="quantity" placeholder="Quantity" min="1" value="" required />
        </div>
        <div>
            <label for="desc" style="display: block; text-align: left">Product Description</label>
            <textarea id="desc" name="desc" rows="4" cols="50" placeholder="Description" value="" required></textarea>
        </div>
        <div>
            <label for="image">Upload Image</label>
            <input type="file" id="image" name="image" accept=".png" required />
        </div>
        <div>
            <button type="submit">Submit</button>
        </div>
    </form>  
</div>
<div class="form-panel" id="removeFormPanel">
    <form id="remove-product-form">
        <label for="id">Product ID</label>
        <input type="text" id="id" name="id" placeholder="Product ID" value="" required><br><br>
        <button type="submit">Remove</button>
    </form>
</div>
