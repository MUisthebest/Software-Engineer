<section class="Box_Item">
    <div class="buy_realted_box">
        <div class="buy_box">
            <div class="img_product_box">
                <img src="data:image/<%=product.image.contentType%>;base64,<%=product.image.data.toString('base64')%>">
            </div>
            <div class="text_box">
                <h4>
                    <%=product.desc%>
                </h4>
            </div>  
            <div class="purchase_box">
                <a href="#"><i class='bx bx-cart-add' ></i><p>Purchase</p></a>
                <label class="cost">
                    <p><%=product.price%></p>
                <label>
                    <i class='bx bxs-coin' ></i></label></label>
                <input type="checkbox" id="love" class="hide">
                <label class="luv" for="love">
                    <i class='bx bxs-heart' id="love"></i>
                </label>
            </div>
        </div>
        <div class="realted_box"></div>
    </div>
</section>
