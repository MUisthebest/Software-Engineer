<link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script data-cfasync="false" src="/cdn-cgi/scripts/5c5dd728/cloudflare-static/email-decode.min.js"></script>
<script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/js/bootstrap.bundle.min.js"></script>
<script type="text/javascript"> </script> 
<section class="User container-fluid container-p-y p-1 my-0">
    <div class="container mt-5">
        <div class="d-flex justify-content-center row">
            <div class="col-md-10">
                <div class="rounded">
                    <div class="table-responsive table-borderless">
                        <table class="table">
                            <thead>
                                <tr class="content-review">
                                    <th class="text-center">
                                        <div class="toggle-btn">
                                            <div class="inner-circle"></div>
                                        </div>
                                    </th>
                                    <th class="mr-5">Order ID#</th>
                                    <th class="ml-5">Total Price</th>
                                </tr>
                            </thead>
                            <tbody class="table-body review-order">
                                <% for (let i = 0; i < orders.length; i++){ %>
                                <tr class="cell-1">
                                    <td class="text-center">
                                        <div class="toggle-btn">
                                            <div class="inner-circle"></div>
                                        </div>
                                    </td>
                                    <td><%=orders[i].id%></td>
                                    <td><%=orders[i].totalPrice%></td>
                                    <td><span class="badge badge-success">Fullfilled</span></td>
                                    <%let products = orders[i].products%>
                                    <% for (let j = 0; j < products.length; j++){ %>
                                        <tr class="cell-2">
                                            <td colspan="4">
                                                <ol>
                                                    <li class="d-flex pt-1">
                                                        <img src="data:image/<%=products[j].product.image.contentType%>;base64,<%=products[j].product.image.data.toString('base64')%>" alt="<%=products[j].product.name%>">
                                                        <div class="ml-5"><%=products[j].product.name%></div>
                                                        <div class="ml-5"><%=products[j].quantity%></div>
                                                    </li>
                                                </ol>
                                            </td>
                                        </tr>
                                    <% } %>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    function changeURL() {
        window.location.href = '/user';
    }
</script>