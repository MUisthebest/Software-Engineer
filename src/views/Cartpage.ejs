<link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/css/bootstrap.min.css" rel="stylesheet">
<section class="Cart">
    <%if (cart && cart.cartItems){ %>
        <div class="container-fluid mt-5">
            <div class="row">
                <aside class="col-lg-9 list_product">
                    <div class="card">
                        <div class="table-responsive">
                            <table class="table table-borderless table-shopping-cart">
                                <thead class="text-muted">
                                    <tr class="small text-uppercase">
                                        <th scope="col">Product</th>
                                        <th scope="col" width="120">Quantity</th>
                                        <th scope="col" width="120">Price</th>
                                        <th scope="col" class="text-right d-none d-md-block" width="200"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <%let products = cart.cartItems%>
                                    <% for (let i = 0; i < products.length; i++){ %>
                                        <tr>
                                            <td>
                                                <a href="/products/<%=products[i].product.id%>" class="title text-dark" data-abc="true">
                                                    <figure class="itemside align-items-center">
                                                        <div class="aside">
                                                            <img src="data:image/<%=products[i].product.image.contentType%>;base64,<%=products[i].product.image.data.toString('base64')%>">
                                                        </div>
                                                        <figcaption class="info">
                                                            <a href="/products/<%=products[i].product.id%>" class="title text-dark" data-abc="true">
                                                                <%=products[i].product.name%>
                                                            </a>
                                                        </figcaption>
                                                    </figure>
                                                </a>
                                            </td>
                                            <td><%=products[i].quantity%></td>
                                            <td>
                                                <div class="price-wrap"> <var class="price">$<%=products[i].product.price%></var></div>
                                            </td>
                                            <td class="text-right d-none d-md-block"> 
                                                <a data-original-title="Save to Wishlist" title="" href="" class="btn btn-light" data-toggle="tooltip" data-abc="true"> 
                                                    <i class="fa fa-heart"></i>
                                                </a> 
                                                <a href="#" class="btn btn-light remove_btn" data-abc="true" id="<%=products[i].product.id%>">Remove</a> 
                                            </td>
                                        </tr>
                                    <% } %>    
                                </tbody>
                            </table>
                        </div>
                    </div>
                </aside>
                <aside class="col-lg-3">
                    <div class="card mb-3">
                        <div class="card-body">
                            <form>
                                <div class="form-group"> <label>Have coupon?</label>
                                    <div class="input-group"> <input type="text" class="form-control coupon" name="" placeholder="Coupon code"> <span class="input-group-append"> <button class="btn btn-primary btn-apply coupon">Apply</button> </span> </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            <dl class="dlist-align">
                                <dt>Total price:</dt>
                                <dd class="text-right ml-3">$<%=cart.totalPrice%></dd>
                            </dl>
                            <dl class="dlist-align">
                                <dt>Discount:</dt>
                                <dd class="text-right text-danger ml-3">- $10.00</dd>
                            </dl>
                            <dl class="dlist-align">
                                <dt>Total:</dt>
                                <dd class="text-right text-dark b ml-3"><strong>$<%=cart.totalPrice%></strong></dd>
                            </dl>
                            <hr> <a href="#" class="btn btn-out btn-primary btn-square btn-main" data-abc="true"> Make Purchase </a> <a href="#" class="btn btn-out btn-success btn-square btn-main mt-2" data-abc="true">Continue Shopping</a>
                        </div>
                    </div>
                </aside>
            </div>
        </div>
    <%} else{ %>
        <div class="no_item"><p>Your cart has no items</p></div>    
    <%} %>
    <script
        src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js"
        integrity="sha512-bZS47S7sPOxkjU/4Bt0zrhEtWx0y0CRkhEp8IckzK+ltifIIE9EMIMTuT/mEzoIMewUINruDBIR/jJnbguonqQ=="
        crossorigin="anonymous"
        referrerpolicy="no-referrer"
    ></script>
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/cartHandler.js"></script>
</section>